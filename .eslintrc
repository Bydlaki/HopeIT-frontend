{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },
  "plugins": [
    "react"
  ],
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "globals": {
    "__PRODUCTION__": true,
    "__API_URL__": true
  },
  "rules": {
    "max-len": [
      2, {
        "code": 120
      }
    ],
    "semi": [1, "always"],
    "react/no-deprecated": 0,
    "react/jsx-key": 0,
    "react/no-unescaped-entities": 0,
    "react/no-children-prop": 1,
    "no-console": 0,
    "no-debugger": 1,
    "no-unused-vars": 1,
    "array-bracket-spacing": 2,
    "brace-style": 2,
    "linebreak-style": 2,
    "max-lines": [2, 500],
    "no-multiple-empty-lines": 1,
    "no-constant-condition": 0,
    "padded-blocks": [1, {
      "blocks": "never",
      "classes": "never",
      "switches": "never"
    }],
    "quotes": [1, "single"]
  }
}
